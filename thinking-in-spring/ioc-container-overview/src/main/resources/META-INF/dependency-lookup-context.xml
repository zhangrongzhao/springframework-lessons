<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

       <bean id="user" class="org.geekbang.thinking.in.spring.ioc.container.domain.User">
              <property name="id" value="1"></property>
              <property name="name" value="小马哥"></property>
       </bean>

       <bean id="superUser" class="org.geekbang.thinking.in.spring.ioc.container.domain.SuperUser" parent="user" primary="true">
              <property name="address" value="BEIJING"></property>
       </bean>

       <bean id="objectFactory" class="org.springframework.beans.factory.config.ObjectFactoryCreatingFactoryBean">
              <property name="targetBeanName" value="user"></property>
       </bean>
</beans>